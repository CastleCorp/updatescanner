#!/usr/bin/env bash

mkdir chrome
cp -r ../content chrome
cp -r ../locale chrome
cp -r ../skin chrome
cp -r ../defaults .

XPI="$APP.xpi"
[ -f $XPI ] && rm $XPI
echo _build/$XPI
find install.rdf chrome.manifest chrome defaults \
    | grep -v /.svn \
    | grep -v '/.#' \
    | grep -v '.*~$' \
    | grep -v '/CVS' \
    | grep -v '.cvsignore' \
    | grep -v '.build$' \
    | xargs zip -q $XPI

