#!/usr/bin/env bash

[ -e chrome ] && rm -rf chrome
mkdir chrome
cp -r content chrome
cp -r locale chrome
cp -r skin chrome

find chrome -type f | grep '/.#' | xargs rm -f
find chrome -type f | grep '.*~$' | xargs rm -f

XPI="$APP.xpi"
[ -f $XPI ] && rm $XPI
echo $XPI
find install.rdf chrome.manifest chrome defaults \
    | grep -v /.svn \
    | grep -v '/.#' \
    | grep -v '.*~$' \
    | grep -v '/CVS' \
    | grep -v '.cvsignore' \
    | grep -v '.build$' \
    | xargs zip -q $XPI

